<div class="event">
  <div class="ui content">
    <div class="ui summary">
      <a href="/profile/{{user._id}}">{{user.firstName}} {{user.lastName}}</a> tweeted
      <br>
    </div>
    <div class="extra text ">
      {{content}}
    </div>
    <div class="meta ">
      {{timestamp}}
    </div>
  </div>
  {{#if ownProfile}}
  <div class="top right attached label">
    <a href="/deleteTweet/{{id}}">
      <i class="remove blue icon"></i>
    </a>
  </div>
  {{/if}}
</div>